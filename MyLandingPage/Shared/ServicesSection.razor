@using System
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.Extensions.Localization
@using Microsoft.JSInterop

@inject IStringLocalizer<Shared.ServicesSection> L
@inject IJSRuntime JS

<section id="services" class="py-5">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold">@L["Services_Title"]</h2>
        </div>

        <div class="swiper mySwiper w-100">
            <div class="swiper-wrapper">
                @foreach (var service in Services)
                {
                    <div class="swiper-slide">
                        <div class="card service-card text-center w-100">
                            <img src="@service.Image" class="service-img" alt="@service.Title" />
                            <div class="card-body d-flex flex-column justify-content-end align-items-center p-4">
                                <h5 class="card-title mb-2">@service.Title</h5>
                                <p class="card-text text-muted mb-4">@service.Description</p>
                                <a href="@service.Link" class="btn btn-primary btn-lg w-100 mt-auto">
                                    @L["Service_LearnMore"]
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>

@code {
    public class ServiceInfo
    {
        public string Title { get; set; } = default!;
        public string Image { get; set; } = default!; // images/services/service-x.jpg
        public string Link { get; set; } = default!;
        public string Description { get; set; } = default!;
    }

    private List<ServiceInfo> Services => new()
    {
        new ServiceInfo { Title = L["Service1_Title"], Image = "images/services/service-yachtschool.jpg", Description = L["Service1_Desc"], Link = "programs" },
        new ServiceInfo { Title = L["Service2_Title"], Image = "images/services/service-charter.jpg", Description = L["Service2_Desc"], Link = "charter" },
        new ServiceInfo { Title = L["Service3_Title"], Image = "images/services/service-tours.jpg", Description = L["Service3_Desc"], Link = "tours" },
        new ServiceInfo { Title = L["Service4_Title"], Image = "images/services/service-bareboat-charter.jpg", Description = L["Service4_Desc"], Link = "bareboat-charter" },
    };

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initSwiper");
        }
    }
}